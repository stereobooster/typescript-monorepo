{
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "transform": {
    "\\.jsx?$": "babel-jest",
    "\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/__tests__/**/*.test.*"],
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "@stereobooster/(.*)$": "<rootDir>/packages/$1"
  }
}
