{
  "name": "typescript-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "description": "Typescript monorepo",
  "repository": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prestart": "yarn build && yarn build-stories",
    "start": "tsc --build --watch",
    "poststart": "yarn start-stories",
    "pretest": "yarn build",
    "test": "jest --config=jest.json",
    "build": "tsc --build",
    "clean": "lerna run clean --stream --parallel",
    "start-stories": "lerna run start --stream --scope=@stereobooster/stories",
    "build-stories": "lerna run build --stream --scope=@stereobooster/stories",
    "test-stories": "lerna run test --stream --scope=@stereobooster/stories"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
